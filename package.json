{
  "name": "@mcp-connect/root",
  "private": true,
  "version": "1.0.0",
  "description": "MCP-Connect - A development and debugging toolkit for Model Context Protocol based systems",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm  -r --parallel dev",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "prunet": "pnpm store prune",
    "up": "pnpm   -r up",
    "prepublishOnly": "pnpm build",
    "publish": "npm publish --registry https://registry.npmjs.org/",
    "publish:beta": "npm publish --tag beta --registry https://registry.npmjs.org/"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "mcp",
    "protocol",
    "development",
    "debugging",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@radix-ui/colors": "^3.0.0",
    "radix-vue": "^1.9.17"
  }
}
