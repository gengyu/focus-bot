{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": false,
    "noEmit": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strict": true,
    "skipLibCheck": true,
    // "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
  },
  "types": [
    "node",
    "vite/client"
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}